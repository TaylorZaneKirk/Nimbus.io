<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Welcome!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <TextView
        android:text="First Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="61dp"
        android:id="@+id/fnhome"
        android:textSize="20sp"
        android:textColor="#ff000000" />

    <TextView
        android:text="Last Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fnhome"
        android:layout_marginTop="30dp"
        android:id="@+id/lnhome"
        android:textSize="22sp"
        android:layout_alignStart="@+id/fnhome"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fninsert"
        android:text="test_first_name"
        android:textSize="22sp"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/fnhome"
        android:layout_toEndOf="@+id/lnhome" />

    <TextView
        android:text="test_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lninsert"
        android:textSize="22sp"
        android:layout_alignStart="@+id/fninsert"
        android:layout_alignTop="@+id/lnhome" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lnhome"
        android:layout_marginTop="30dp"
        android:id="@+id/ehome"
        android:textSize="22sp"
        android:textColor="#ff000000"
        android:layout_alignStart="@+id/lnhome" />

    <TextView
        android:text="test_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ehome"
        android:layout_alignStart="@+id/lninsert"
        android:id="@+id/einsert"
        android:textSize="22sp" />

    <TextView
        android:text="Phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ehome"
        android:layout_alignStart="@+id/ehome"
        android:layout_marginTop="30dp"
        android:id="@+id/phome"
        android:textSize="22sp"
        android:textColor="#ff000000" />

    <TextView
        android:text="phone_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phome"
        android:layout_alignStart="@+id/einsert"
        android:id="@+id/pinsert"
        android:textSize="22sp" />

    <TextView
        android:text="Balance $:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phome"
        android:layout_alignStart="@+id/ehome"
        android:layout_marginTop="30dp"
        android:id="@+id/balance"
        android:textSize="22sp"
        android:textColor="#ff000000" />

    <TextView
        android:text="balance_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/balance"
        android:layout_alignStart="@+id/einsert"
        android:id="@+id/binsert"
        android:textSize="22sp" />

</RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>